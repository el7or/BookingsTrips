        @*<li><a href="#"> <span class="glyphicon glyphicon-bell"></span><span class="badge bg-danger">9</span></a></li>*@
        <li>
            <a class="dropdown-toggle" data-toggle="dropdown">
                @User.Identity.GetUserName()
